@inherits InputText
@inject IJSRuntime JSRuntime

<input @ref="ER_InputText" @attributes="AdditionalAttributes" type="text" />

@code {
    [Parameter]
    public string Placeholder { get; set; } = "_";

    [Parameter]
    public string Mask { get; set; } = null!;

    private ElementReference ER_InputText { get; set; } = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("fnApplyInputMask", ER_InputText, Mask, Placeholder = "_");
        }
    }
}
