<div class="container-fluid p-3">
    <div class="header">
        @Header
    </div>

    <div class="child-content">
        @ChildContent
    </div>

    <div class="footer">
        @Footer
    </div>
</div>

@code {
    [Parameter]             
    public RenderFragment? Header { get; set; }
    
    [Parameter]             
    public String? Name { get; set; }

    [Parameter]
    public RenderFragment? Footer { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
