@page "/"
@using AstroOfficeWeb.Components.Shared

@attribute [Authorize]

<AuthorizeView Roles="ManageProduct">
    <AstroOfficeWeb.Client.Pages.Product.ManageProducts></AstroOfficeWeb.Client.Pages.Product.ManageProducts>
</AuthorizeView>


<AuthorizeView Roles=@("User, Admin" + ',' + ApplicationConst.Role_Astrologer + ',' + ApplicationConst.Role_Member)>
    <ContainerFluid HeaderTitle="Reports">
        <ChildContent>
            <Dashboard>
                <SelectCityFragment>

                    <SelectCity></SelectCity>
                </SelectCityFragment>
            </Dashboard>
        </ChildContent>
    </ContainerFluid>
</AuthorizeView>

<AuthorizeView Roles=@(ApplicationConst.Role_OrderManager)>
    <ChildContent>
        <AstroOfficeWeb.Client.Pages.Product.ManageOrders />
    </ChildContent>
</AuthorizeView>

<AuthorizeView Roles=@(ApplicationConst.Role_SystemAdmin)>
    <ChildContent>
        <AstroOfficeWeb.Client.Pages.Product.ManageProducts />
    </ChildContent>
</AuthorizeView>
