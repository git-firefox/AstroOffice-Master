@page "/welcome"
@layout EmptyLayout

@inject NavigationManager Navigation

<div class="container text-center text-light p-3">

    <div class="welcome-content">
        <h1 class="display-4">Welcome to Divya Astro Ashram</h1>
        <!-- Add user-friendly welcome message with username -->
        <AuthorizeView>
            <p class="lead">Hello, <span class="font-weight-bold badge badge-pill badge-secondary">@context?.User?.Identity?.Name </span>! Explore the mystical world of astrology and discover insights into your life.</p>
        </AuthorizeView>
        <!-- Make the image circular -->
        <img src="images/loader-4.gif" alt="Astrology">
        <!-- Overview and Information Section -->
        <div class="astro-info">
            <h2 class="mb-3">Who We Are?</h2>
            <p>One of the top companies offering online astrology services is Divya Astro Ashram. We are committed to giving people who are looking for a better knowledge of themselves and their life path helpful insights, advice, and chances for personal progress.</p>
            <p>Our platform offers a variety of features to help you explore and understand astrology, from personalized horoscopes to in-depth Kundali analysis.</p>
        </div>
        <!-- Call-to-Action Button -->
        <button class="btn btn-primary btn-lg mt-4" @onclick="OnClick_BtnExplore">Explore Now</button>
    </div>
</div>

@code
{
    private void OnClick_BtnExplore()
    {
        Navigation.NavigateTo("/", false, true);
    }
}