@page "/view-order/{OrderId:long}"

@using AstroOfficeWeb.Client.Services
@using AstroShared.DTOs

@inject ProductService ProductService
@inject NavigationManager NavigationManager
@inject StateContainerService StateContainerService

<ContainerFluid HeaderTitle="View Order">
    <Header>
        <button class="btn btn-custom">Cancel</button>
    </Header>
    <ChildContent>
        @if (Order != null)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header border-bottom bg-transparent">
                            @* <h5 class="header-title mb-0">Order # MN2048</h5> *@
                            <h5 class="header-title mb-0">Order # @Order.Order.OrderId</h5>
                        </div>
                        <div class="card-body">
                            <div>
                                <div class="row">
                                    <div class="col-lg-3 col-sm-6">

                                        <div class="d-flex mb-2">
                                            <div class="me-2 align-self-center">
                                                <i class="fas fa-hashtag h2 m-0 text-muted"></i>
                                            </div>
                                            <div class="flex-1">
                                                <p class="mb-1">ID No.</p>
                                                <h5 class="mt-0">
                                                    @Order.Order.OrderId
                                                </h5>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-sm-6">

                                        <div class="d-flex mb-2">
                                            <div class="me-2 align-self-center">
                                                <i class="fas fa-user h2 m-0 text-muted"></i>
                                            </div>
                                            <div class="flex-1">
                                                <p class="mb-1">Billing Name</p>
                                                <h5 class="mt-0">
                                                    @Order.Order.BillingName
                                                </h5>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-sm-6">

                                        <div class="d-flex mb-2">
                                            <div class="me-2 align-self-center">
                                                <i class="fas fa-calendar-alt h2 m-0 text-muted"></i>
                                            </div>
                                            <div class="flex-1">
                                                <p class="mb-1">Date</p>
                                                <h5 class="mt-0">
                                                    @* Apr 16 2020 <small class="text-muted">10:29 PM</small> *@
                                                    @Order.Order.Date?.ToString(format: "MMM dd yyyy") <small class="text-muted">@Order.Order.Date?.ToString(format: "t")</small>
                                                </h5>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-sm-6">

                                        <div class="d-flex mb-2">
                                            <div class="me-2 align-self-center">
                                                <i class="fas fa-map-marker-alt h2 m-0 text-muted"></i>
                                            </div>
                                            <div class="flex-1">
                                                <p class="mb-1">Tracking ID</p>
                                                <h5 class="mt-0">
                                                    123456789
                                                </h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-2">
                                @* <h4 class="header-title mb-3">Items from Order #MN2048</h4> *@
                                <h4 class="header-title mb-3">Items from Order @Order.Order.OrderId</h4>
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div>
                                            <div class="table-responsive">
                                                <table class="table table-centered border table-nowrap mb-lg-0">
                                                    <thead class="bg-light">
                                                        <tr>
                                                            <th>Product</th>
                                                            <th>Quantity</th>
                                                            <th>Price</th>
                                                            <th>Total</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Order.OrderItems)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <div class="d-flex align-items-center">
                                                                        <div class="me-3">
                                                                            <img src="@item.ProductImageSrc" alt="@item.ProductName" title="@item.ProductName" height="40" />
                                                                        </div>
                                                                        <div class="flex-1">
                                                                            <h5 class="m-0">@item.ProductName</h5>
                                                                            @* <p class="mb-0">Size : Large</p> *@
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                                <td>@item.ProductQuantity</td>
                                                                <td>@item.ProductPrice</td>
                                                                <td>@((item.ProductQuantity * item.ProductPrice).ToString(format: "N2"))</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div>

                                            <div class="table-responsive">
                                                <table class="table table-centered border mb-0">
                                                    <thead class="bg-light">
                                                        <tr>
                                                            <th colspan="2">Order summary</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <th scope="row">Sub Total :</th>
                                                            <td>@OrderSummary!.GrandTotal.ToString(format: "N2")</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="row">Shipping Charge :</th>
                                                            <td>@OrderSummary.ShippingCharge.ToString(format: "N2")</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="row">Estimated Tax :</th>
                                                            <td>@OrderSummary.EstimatedTax.ToString(format: "N2")</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="row">Total :</th>
                                                            <td>@OrderSummary.Total.ToString(format: "N2")</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- end card -->

                    <div class="row mb-3">
                        <div class="col-lg-4">
                            <div>
                                <h4 class="font-15 mb-2">Shipping Information</h4>

                                <div class="card p-2 mb-lg-0">

                                    <table class="table table-borderless table-sm mb-0">

                                        <tbody>
                                            <tr>
                                                <th colspan="2"><h5 class="font-15 m-0">@Order.ShippingInformation.FullName</h5></th>
                                            </tr>
                                            <tr>
                                                <th scope="row">Address:</th>
                                                <td>
                                                    @* 707 Locust View Drive
                                                    San Francisco, CA 94115 *@
                                                    @Order.ShippingInformation.AddressLine1,
                                                    @Order.ShippingInformation.AddressLine2,
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Phone :</th>
                                                <td>@Order.ShippingInformation.PhoneNumber</td>
                                            </tr>
                                            @* <tr>
                                                <th scope="row">Mobile :</th>
                                                <td>(+01) 12345 67890</td>
                                            </tr> *@
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div>
                                <h4 class="font-15 mb-2">Billing  Information</h4>

                                <div class="card p-2 mb-lg-0">
                                    <table class="table table-borderless table-sm mb-0">

                                        <tbody>
                                            <tr>
                                                <th scope="row">Payment Type:</th>
                                                <td>@Order.Order.PaymentMethod</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Provider :</th>
                                                <td>Visa ending in 2851</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Valid Date :</th>
                                                <td>02/2021</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">CVV :</th>
                                                <td>xxx</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div>
                                <h4 class="font-15 mb-2">Delivery Info</h4>

                                <div class="card p-2 mb-lg-0">
                                    <div class="text-center">
                                        <div class="my-2">
                                            <i class="fas fa-shipping-fast h1 text-muted"></i>
                                        </div>
                                        <h5><b>UPS Delivery</b></h5>
                                        <div class="mt-2 pt-1">
                                            <p class="mb-1"><span class="fw-semibold">Order ID :</span> @Order.Order.OrderId</p>
                                            <p class="mb-0"><span class="fw-semibold">Payment Mode :</span> @Order.Order.PaymentMethod</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }
    </ChildContent>
</ContainerFluid>