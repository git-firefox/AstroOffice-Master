@page "/manage-products/{Mode}/product"
@page "/manage-products/{Mode}/product/{Sno}/{Name}"

@attribute [Authorize(Roles = "Admin,User,ManageProduct")]

<FluidPageLayout Title="Add Product">
    <ChildContent>
        <AstroOfficeWeb.Components.ProductComponents.SaveProduct Sno="Sno" />
    </ChildContent>
</FluidPageLayout>

@code
{
    [Parameter]
    public long Sno { get; set; } = 0;

    [Parameter]
    public ActionMode Mode { get; set; } = ActionMode.Add;

    [Parameter]
    public string? Name { get; set; }
}
