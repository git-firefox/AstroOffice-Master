@page "/product/{ProductSno:long}/{ProductName}"

@using AstroOfficeWeb.Client.Services
@*
@inject ProductService ProductService
@inject NavigationManager NavigationManager
@inject StateContainerService StateContainerService
@inject IJSRuntime JSRuntime
@inject ILocalStorageService LocalStorage

<div class="container p-3">



    <section class="content">
        <div class="card card-solid">
            <div class="card-body">


                <div class="row">
                    <div class="col-12 col-sm-6">
                        <h3 class="d-inline-block d-sm-none">@ViewProductDTO!.Name</h3>
                        <div class="col-12">
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="@SelectedImage!.ImageURL" class="d-block w-100" alt="@SelectedImage!.ImageName" title="@SelectedImage!.ImageName" />
                                    </div>

                                    @foreach (var image in BrowserFiles)
                                    {
                                        <div class="carousel-item">
                                            <img src="@image.ImageURL" class="d-block w-100" alt="@image.ImageName" title="@image.ImageName" />
                                        </div>
                                    }
                                </div>

                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>

                                <div class="carousel-indicators">

                                    <button data-target="#carouselExampleIndicators" data-slide-to="0" class="thumbnail active" aria-current="true" aria-label="Slide 1">
                                        <img src="@SelectedImage!.ImageURL" class="img-thumbnail" alt="@SelectedImage!.ImageName" title="@SelectedImage!.ImageName" />
                                    </button>

                                    @foreach (var (value, index) in BrowserFiles.Select((value, index) => (value, index)))
                                    {
                                        <button data-target="#carouselExampleIndicators" data-slide-to="@(index+1)" class="thumbnail" aria-label="Slide @(index+2)">
                                            <img src="@value.ImageURL" class="img-thumbnail" alt="@value.ImageName" title="@value.ImageName" />
                                        </button>

                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <h3 class="my-3">@ViewProductDTO!.Name</h3>
                        <h4 class="my-3">@ViewProductDTO!.Summary</h4>

                        <hr />

                        @if (!string.IsNullOrEmpty(ViewProductDTO.ProductCategory))
                        {
                            <h4>Category : @ViewProductDTO.ProductCategory</h4>
                        }

                        <div class="bg-white py-2 px-3 mt-4">
                            <h2 class="mb-0">
                                <i class="fas fa-rupee-sign"></i> @ViewProductDTO!.Price.ToString("N2")
                            </h2>
                            <h4 class="mt-0">
                                <small>Ex Tax: &#8377; @ViewProductDTO!.Price.ToString("N2") </small>
                            </h4>
                        </div>

                        <div class="mt-4">
                            <button class="btn btn-primary btn-lg btn-flat" @onclick="OnClick_BtnAddToCart">
                                <i class="fas fa-cart-plus fa-lg mr-2"></i>
                                Add to Cart
                            </button>

                            <button class="btn btn-default btn-lg btn-flat" @onclick="OnClick_BtnAddToWishlist">
                                <i class="fas fa-heart fa-lg mr-2"></i>
                                Add to Wishlist
                            </button>
                        </div>



                    </div>
                </div>


                <div class="row mt-5">
                    <div class="col-12">
                        <div class="card card-primary card-outline card-outline-tabs">
                            <div class="card-header p-0 border-bottom-0">
                                <ul class="nav nav-tabs d-flex justify-content-center" id="custom-tabs-four-tab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="custom-tabs-four-home-tab" data-toggle="pill" href="#custom-tabs-four-home" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true">
                                            DESCRIPTION
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="custom-tabs-four-profile-tab" data-toggle="pill" href="#custom-tabs-four-profile" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="false">
                                            ADDITIONAL INFORMATION
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="card-body">
                                <div class="tab-content" id="custom-tabs-four-tabContent">
                                    <div class="tab-pane fade show active" id="custom-tabs-four-home" role="tabpanel" aria-labelledby="custom-tabs-four-home-tab">
                                        <div class="embed-responsive ">
                                            @(new MarkupString(ViewProductDTO!.Description ?? ""))
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="custom-tabs-four-profile" role="tabpanel" aria-labelledby="custom-tabs-four-profile-tab">
                                        <MudTable Items="MetaDataList" Hover="true" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Info">
                                            <RowTemplate>
                                                <MudTd DataLabel="MetaKeyword">
                                                    @context.MetaKeyword
                                                </MudTd>
                                                <MudTd DataLabel="MetaValue">
                                                    @context.MetaValue
                                                </MudTd>
                                            </RowTemplate>

                                            <NoRecordsContent>
                                                <MudText>No extra details available. Feel free to contact us for specific inquiries.</MudText>
                                            </NoRecordsContent>
                                            <LoadingContent>
                                                <MudText>Loading...</MudText>
                                            </LoadingContent>
                                        </MudTable>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </section>
</div> *@



<Container Name="View Product">
    <Header>
        <button onclick="history.back()" class="btn btn-custom">
            <i class="fas fa-arrow-left"></i> Back
        </button>
    </Header>
    <ChildContent>
        <AstroOfficeWeb.Components.ProductComponents.ViewProduct ProductName="@ProductName" ProductSno="ProductSno"></AstroOfficeWeb.Components.ProductComponents.ViewProduct>
    </ChildContent>
</Container>


@code {
    [Parameter]
    public long ProductSno { get; set; }

    [Parameter]
    public string? ProductName { get; set; }
}
