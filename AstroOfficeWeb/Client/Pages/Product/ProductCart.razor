@page "/product-cart"
@page "/shopping-cart"
@using AstroOfficeWeb.Client.Services

<Container Name="Shopping cart">
    <ChildContent>
        <AstroOfficeWeb.Components.ProductComponents.ProductCart HandleEmptyCart="OnEmptyCart"></AstroOfficeWeb.Components.ProductComponents.ProductCart>
    </ChildContent>
</Container>


@code {
    public bool IsEmpty { get; set; } = false;
    private void OnEmptyCart(bool isEmpty)
    {
        IsEmpty = isEmpty;
    }
}