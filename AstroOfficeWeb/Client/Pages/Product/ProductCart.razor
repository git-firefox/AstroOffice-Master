                                                            <th>Quantity</th>
                                                            <th colspan="2">Total</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        @foreach (var cartItem in ProductCartViewModel.CartItems)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <img src="@cartItem.ProductImageSrc" alt="@cartItem.ProductName" title="@cartItem.ProductName" class="avatar-lg" />
