                                        </div>

                                        <div class="row mt-4">
                                            <div class="col-sm-6"></div>
                                            <div class="col-sm-6">
                                                <div class="text-sm-end">
                                                    <button class="btn btn-danger" @onclick="OnClik_BtnCheckout"><i class="fas fa-cart-plus"></i> Checkout </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3">
                                    <div class="border p-3 mt-4 mt-lg-0 rounded">
                                        <h4 class="header-title mb-3">Order Summary</h4>

                                        <div class="table-responsive">
                                            <table class="table mb-0">
                                                <tbody>
                                                    <tr>
                                                        <td>Grand Total :</td>
                                                        <td><i class="fas fa-rupee-sign"></i> @OrderSummary.GrandTotal.ToString("F2")</td>
                                                    </tr>

                                                    @if (OrderSummary.Discount != 0)
                                                    {
                                                        <tr>
                                                            <td>@OrderSummary.DiscountPercentage <i class="fas fa-percentage"></i> Discount  : </td>
                                                            <td>- <i class="fas fa-rupee-sign"></i> @OrderSummary.Discount.ToString("F2")</td>
                                                        </tr>
                                                    }

                                                    @if (OrderSummary.ShippingCharge != 0)
                                                    {
                                                        <tr>
                                                            <td>@OrderSummary.ShippingChargePercentage <i class="fas fa-percentage"></i>  Shipping Charge :</td>
                                                            <td><i class="fas fa-rupee-sign"></i> @OrderSummary.ShippingCharge.ToString("F2")</td>
                                                        </tr>
                                                    }

                                                    <tr>
                                                        <td>@OrderSummary.EstimatedTaxPercentage <i class="fas fa-percentage"></i> Estimated Tax : </td>
                                                        <td><i class="fas fa-rupee-sign"></i> @OrderSummary.EstimatedTax.ToString("F2")</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Total :</th>
                                                        <th><i class="fas fa-rupee-sign"></i> @OrderSummary.Total.ToString("F2")</th>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
