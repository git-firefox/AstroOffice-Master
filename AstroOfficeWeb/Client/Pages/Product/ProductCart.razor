                                                                    <a href="javascript:void(0);" class="action-icon text-danger" @onclick="() =>OnClick_ARemoveItem(cartItem)" title="@("Remove \"" + cartItem.ProductName + "\"")"> <i class="fas fa-trash-alt"></i></a>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </EditForm>
                                        </div>

