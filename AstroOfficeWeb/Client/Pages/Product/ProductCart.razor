                                                                            </span>

                                                                            <InputMask2 class="form-control" @bind-Value="cartItem.ProductQuantity" disabled />
                                                                            <span class="input-group-btn input-group-append">
                                                                                <button class="btn btn-custom" type="button" @onclick="() => OnClick_UpdateQuantity(cartItem, +1)">+</button>
                                                                            </span>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <i class="fas fa-rupee-sign"></i> @((cartItem.ProductPrice * cartItem.ProductQuantity).ToString("F2"))
                                                                </td>
