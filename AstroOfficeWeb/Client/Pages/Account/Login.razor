@page "/login"

@inject IAuthenticationService AuthService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthenticationStateProvider
@layout AccountLayout


<EditForm Model="LoginModel" OnInvalidSubmit="OnInvalidSubmit" OnValidSubmit="OnValidSubmitAsync" class="mb-3 mt-md-4">
    <DataAnnotationsValidator />

    @* <h2 class="fw-bold mb-2 text-uppercase ">Divya Astro Ashram</h2> *@
    <p class=" mb-5">Please enter your login and password!</p> 

    <div class="input-group mt-2">
        <span class="input-group-text"><i class="fa fa-user"></i></span>
        <InputText @bind-Value="LoginModel!.UserName" class="form-control" placeholder="User Name" />
    </div>
    <ValidationMessage For="() => LoginModel!.UserName" />

    <div class="input-group mt-2">
        <span class="input-group-text"><i class="fa fa-lock"></i></span>
        <InputText type="@(PasswordIsClicked ? "text" : "password")" @bind-Value="LoginModel!.Password" class="form-control" placeholder="Password" />
        <span class="input-group-text"><i class="fas @(PasswordIsClicked ? "fa-eye-slash" : "fa-eye")" @onclick="()=>{PasswordIsClicked = !PasswordIsClicked; }"></i></span>
    </div>
    <ValidationMessage For="() => LoginModel.Password" />

    <div class="form-check  mt-2">
        <InputCheckbox @bind-Value="LoginModel!.RememberMe" id="ChkRememberMe" class="form-check-input" />
        <label for="ChkRememberMe" class="form-check-label">Remember Me </label>
    </div>

    <div class="d-grid  mt-2">
        <button class="btn btn-outline-dark" type="submit">Login</button>
    </div>

</EditForm>
<div class="text-center mt-2">
    <p>Don't have an account? <a href="/register" class="text-primary fw-bold"> Sign Up </a>        </p>
    <p><a href="/forgotpass" class="text-primary">Forgot password?</a></p>
</div>







