@page "/forgotpass"
@inject IJSRuntime JSRuntime

<MobileOtpModal @ref="MobileOtpModal" ConfirmationChanged="OnConfirmationChanged" ErrorMessage="@OtpErrorMessage"  />

<div class="login-page" style="min-height: 332.781px;">
    <div class="login-box  card-frame">
        <div>
            <div class="login-logo">
                <h3>Forgot Password</h3>
            </div>
            <div class="card">
                <div class="card-body login-card-body">
                    <p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>


                        <div class="input-group mb-3">
                            <input type="text" @ref="ER_MobileNumber" class="form-control" placeholder="Mobile no." @onfocusout="OnFocusOut_MobileNumber" />
                            @* <input type="text"  @bind-value="@MobileNumber" class="form-control" placeholder="Mobile no." @oninput="OnKeyPress_MobileNumber" /> *@

                            <i class="fas fa-mobile"></i>

                        </div>

                        <div class="row down-form">
                            <div class="col-12 mt-2">
                                <button class="btn btn-custom btn-block" @onclick="OnClick_BtnMobileVerifyOTP">Send OTP</button>
                            </div>
                            <div class="col-12 mt-2">
                                <button class="btn btn-custom btn-custom-outline btn-block">
                                    <NavLink href="/login">
                                        Login
                                    </NavLink>
                                </button>
                            </div>
                        </div>
                   
                    <p class="mb-0 text-center mt-3">
                        <a href="/register" class="text-center forgot-link">Register a new membership</a>
                    </p>
                </div>
            </div>
        </div>
    </div>


</div>




