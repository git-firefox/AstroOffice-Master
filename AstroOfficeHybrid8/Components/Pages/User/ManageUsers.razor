@page "/manage-users"
@page "/users"
@using AstroOfficeWeb.Shared.Utilities

<PageLayout Title="Manage Users" ViewInContainer="false">
    <RightContainer>
        @if (IsLoaded)
        {
            <MudButton Variant="Variant.Text" Class="btn-custom" OnClick="()=>MUsers.OnClick_BtnAction(FormMode.Add)">Add User</MudButton>
        }
    </RightContainer>
    <ChildContent>
            <AstroOfficeWeb.Components.User.ManageUsers GridClass="my-3" @ref=MUsers UsersLoaded="UserLoaded"></AstroOfficeWeb.Components.User.ManageUsers>
    </ChildContent>
</PageLayout>


@code {
    AstroOfficeWeb.Components.User.ManageUsers MUsers = null!;
    bool IsLoaded = false;
    private void UserLoaded(bool isLoaded)
    {
        IsLoaded = isLoaded;
    }
}