@page "/products"
@page "/products/{CategorySno}/{CategoryName}"

@inject IJSRuntime JSRuntime
<PageLayout Title="Shop">
    <RightContainer>
        @* <MudIconButton  Icon="@Icons.Material.Filled.Search"  Variant="Variant.Filled" Style="background-color: white"></MudIconButton> *@
        <MudIconButton OnClick="()=>OnClick_BtnFilter(isOpened)" Icon="@Icons.Material.Filled.FilterAlt" Variant="Variant.Outlined" Color="Color.Default"></MudIconButton>
    </RightContainer>
    <ChildContent>
        <AstroOfficeWeb.Components.ProductComponents.ViewProducts EventCallback="OnClick_BtnFilter" CategoryName="@CategoryName" CategorySno="@CategorySno" CurrentPage="@CurrentPage"></AstroOfficeWeb.Components.ProductComponents.ViewProducts>
    </ChildContent>
</PageLayout>


@code {
    [Parameter]
    public string? CategorySno { get; set; } = null;
    [Parameter]
    public string? CategoryName { get; set; } = null;

    [Parameter]
    public int CurrentPage { get; set; } = 1;


    bool isOpened = true;
    private async void OnClick_BtnFilter(bool isOpen)
    {
        if (isOpen)
        {
            await JSRuntime.InvokeVoidAsync("eval", "document.getElementsByClassName('categories')[0].style.left = '0px'");
            isOpened = false;
        }
        else
        {
            await JSRuntime.InvokeVoidAsync("eval", "document.getElementsByClassName('categories')[0].style.left = '-500px'");
            isOpened = true;
        }
    }
}