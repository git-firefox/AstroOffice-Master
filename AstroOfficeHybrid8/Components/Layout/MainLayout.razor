@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<AuthorizeView>
    <Authorized>
        <CascadingValue Value="this">
            <div class="page">
                <div class="sidebar">
                    <NavMenu />
                </div>

                <main>
                    <article class="content px-4">
                        @Body

                    </article>
                </main> 
            </div>
        </CascadingValue>
    </Authorized>
    <NotAuthorized>
        @Body
    </NotAuthorized>
</AuthorizeView>

@code {
    public string NavTitle { get; set; } = "Home";
    public async Task NotifyChangeAsync()
    {
        await InvokeAsync(StateHasChanged);
    }
}