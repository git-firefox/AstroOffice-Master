        <div class="row">

            <div class="col">

                <div class="form-group">
                    <label class="mb-0">Language:</label>
                    <select class="form-control form-control form-control-border">
                        <option>Hindi</option>
                        <option>English</option>
                        <option>Telugu</option>
                        <option>Gujrati</option>
                        <option>Tamil</option>
                    </select>
                </div>
            </div>

            <div class="col">

                <div class="form-group">
                    <label for="timeZone" class="mb-0">Time Zone</label>
                    <input type="text" class="form-control form-control-border" id="timeZone" name="time zone">

                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <input type="checkbox" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Show Ref. Code</label>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col">

                <div class="form-group">
                    <label class="mb-0">Skip Bad:</label>
                    <select class="form-control form-control form-control-border">
                        <option>Show All</option>
                        <option>Skip Average</option>
                        <option>Skip Bad</option>
                        <option>Skip Worst</option>

                    </select>
                </div>
            </div>

            <div class="col">

                <div class="form-group">
                    <label class="mb-0">Select Time:</label>
                    <select class="form-control form-control form-control-border">
                        <option>Minute</option>
                        <option>Hour</option>
                        <option>Day</option>
                        <option>Lagan</option>

                    </select>
                </div>
            </div>
        </div>


    </div>
</div>

@code {
    [CascadingParameter]
    private MainLayout MainLayout { get; set; }

    protected override async Task OnInitializedAsync()
    {
        MainLayout.NavTitle = "Home";
        await MainLayout.NotifyChangeAsync();
    }
}