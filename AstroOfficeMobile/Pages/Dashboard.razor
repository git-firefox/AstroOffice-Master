@page "/edit-kundali"
@using AstroShared.ViewModels;
@using AstroShared;
@using Microsoft.AspNetCore.Authorization
@using AstroOfficeMobile.Services
@attribute [Authorize]
@inject KundliBLLService KundaliBLL
@inject KPBLLService KPBLL
@inject PredictionBLLService PredictionBLL
@inject IJSRuntime JSRuntime
@inject KundaliHistroyService KundaliHistroy

@inject ISwaggerApiService Swagger


<div>
    <div class="card-body">

        <div class="form-group">
            <label for="exampleInputBorder" class="mb-0"> Name </label>
            <input type="text" @bind="BirthDetails.TxtName" class="form-control form-control-border" id="exampleInputBorder" placeholder="Enter name">
        </div>

        <div class="row">

            <div class="col">

                <div class="form-group">
                    <label for="birthdate" class="mb-0">Date of Birth:</label>
                    <input type="date" @bind="BirthDetails.DateOfBirth" class="form-control form-control-border" id="birthdate" name="birthdate">
                </div>
            </div>

            <div class="col">

                <div class="form-group">
                    <label for="birthtime" class="mb-0">Time of Birth:</label>
                    <input type="time" @bind="BirthDetails.DateOfBirth" class="form-control form-control-border" id="birthtime" name="birthtime">
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label for="gender">Gender</label>
            </div>
            <div class="col">
                <div class="form-check form-check-inline">
                    <input type="radio" checked="@(BirthDetails.Gender == Gender.Male)" id="RbMale" class="form-check-input" name="gender" @onchange="@(() => BirthDetails.Gender = Gender.Male)">
                    <label class="form-check-label" for="RbMale">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" checked="@(BirthDetails.Gender == Gender.Female)" id="RbFemale" class="form-check-input" name="gender" @onchange="@(() => BirthDetails.Gender = Gender.Female)">
                    <label class="form-check-label" for="RbFemale">Female</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Select Country</label>
            <select class="form-control form-control form-control-border">
                @foreach (var item in CmbCountry)
                {
                    <option>@item.Text</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="cityName" class="mb-0"> City Name </label>
            <input type="text" class="form-control form-control-border" id="cityName" placeholder="select city name">
        </div>

        <div class="row">

            <div class="col">

                <div class="form-group">
                    <label for="long" class="mb-0">Long:</label>
                    <input type="text" @bind="BirthDetails.Longtitude" class="form-control form-control-border" id="long" name="long">
                </div>
            </div>

            <div class="col">

                <div class="form-group">
                    <label for="lat" class="mb-0">Lat</label>
                    <input type="text" @bind="BirthDetails.Latitude" class="form-control form-control-border" id="lat" name="latitude">

                </div>
            </div>
        </div>

        <div class="row">

            <div class="col">

                <div class="form-group">
                    <label class="mb-0">Language:</label>
                    <select class="form-control form-control form-control-border">
                        @foreach (var item in BirthDetailsLookups.LanguageItems)
                        {
                            @*  <option>@item.Text</option> *@
                            <option value="@item.Text">@item.Text</option>
                        }


                    </select>
                </div>
            </div>

            <div class="col">

                <div class="form-group">
                    <label for="timeZone" class="mb-0">Time Zone</label>
                    <input type="text" class="form-control form-control-border" id="timeZone" name="time zone">

                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <input type="checkbox" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Show Ref. Code</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <button class="btn btn-warning btn-block">Update</button>
            </div>
        </div>

    </div>
</div>
