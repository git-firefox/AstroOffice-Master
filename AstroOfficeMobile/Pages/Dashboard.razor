@page "/"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]


<div>


    <div class="card-body">

        <div class="form-group">
            <label for="exampleInputBorder" class="mb-0"> Name </label>
            <input type="text" class="form-control form-control-border" id="exampleInputBorder" placeholder="Enter name">
        </div>

        <div class="row">

            <div class="col">

                <div class="form-group">
                    <label for="birthdate" class="mb-0">Date of Birth:</label>
                    <input type="date" class="form-control form-control-border" id="birthdate" name="birthdate">
                </div>
            </div>

            <div class="col">

                <div class="form-group">
                    <label for="birthtime" class="mb-0">Time of Birth:</label>
                    <input type="time" class="form-control form-control-border" id="birthtime" name="birthtime">

                </div>
            </div>
        </div>




        <div class="form-group row">
            <div class="col-3">

                <label for="gender">Gender</label>
            </div>
            <div class="col">
                <div class="form-check form-check-inline">
                    <input type="radio" id="RbMale" class="form-check-input" name="gender" value="male">
                    <label class="form-check-label" for="RbMale">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" id="RbFemale" class="form-check-input" name="gender" value="female">
                    <label class="form-check-label" for="RbFemale">Female</label>

                </div>
            </div>
        </div>

        <div class="form-group">
            <label>Select Country</label>
            <select class="form-control form-control form-control-border">
                <option>India</option>
                <option>Bangladesh</option>
                <option>America</option>
                <option>Russia</option>
                <option>UK</option>
            </select>
        </div>



        <div class="form-group">
            <label for="cityName" class="mb-0"> City Name </label>
            <input type="text" class="form-control form-control-border" id="cityName" placeholder="select city name">
        </div>



        <div class="row">

            <div class="col">

                <div class="form-group">
                    <label for="long" class="mb-0">Long:</label>
                    <input type="text" class="form-control form-control-border" id="long" name="long">
                </div>
            </div>

            <div class="col">

                <div class="form-group">
                    <label for="lat" class="mb-0">Lat</label>
                    <input type="text" class="form-control form-control-border" id="lat" name="latitude">

                </div>
            </div>
        </div>

