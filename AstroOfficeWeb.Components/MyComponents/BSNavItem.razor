<li class="nav-item" role="presentation">
    <button @ref="Reference" class="nav-link @_active" id=@($"pills-{_tab}-tab") data-bs-toggle="pill" data-bs-target=@($"#pills-{_tab}") type="button" role="tab" aria-controls="pills-home" aria-selected="@_selected" @onclick="Clicked">
        <span class="number">@TabNumber.ToString("00")</span>
        <span class="d-none d-sm-inline">@TabName</span>
    </button>
</li>

@code {
    private string _active { get => this.IsActive ? "active" : string.Empty; }

    private string _selected { get => this.IsActive ? "true" : "false"; }

    private string _tab { get => this.TabName.ToUrlFriendlyString(); }

    [Parameter]
    public bool IsActive { get; set; } = false;

    [Parameter]
    public string TabName { get; set; } = null!;

    [Parameter]
    public int TabNumber { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> Clicked { get; set; }

    public ElementReference Reference { get; set; }
}