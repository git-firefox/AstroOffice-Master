<MudTable Items="KaranModelTableData" Hover="true" Breakpoint="Breakpoint.Sm" Loading=@(KaranModelTableData == null) LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>Problem</MudTh>
        <MudTh>House</MudTh>
        <MudTh>Significators</MudTh>
        <MudTh>Good</MudTh>
        <MudTh>Bad</MudTh>
        <MudTh>KaranPlanet</MudTh>
        <MudTh>Position</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Problem">
            @context.Problem
        </MudTd>
        <MudTd DataLabel="House">
            @context.House
        </MudTd>
        <MudTd DataLabel="Significators">
            @context.Significators
        </MudTd>
        <MudTd DataLabel="Good" Class=@(!string.IsNullOrEmpty(context.Good) ? "bg-success" : string.Empty)>
            @context.Good
        </MudTd>
        <MudTd DataLabel="Bad" Class="text-danger">
            @context.Bad
        </MudTd>
        <MudTd DataLabel="KaranPlanet">
            @context.KaranPlanet
        </MudTd>
        <MudTd DataLabel="Position">
            @context.Position
        </MudTd>
    </RowTemplate>
</MudTable>