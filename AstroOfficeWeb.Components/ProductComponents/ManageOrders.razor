@page "/manage-orders"
@using AstroOfficeWeb.Services
@using AstroOfficeWeb.Shared.DTOs

@inject ProductService ProductService
@inject NavigationManager NavigationManager
@* @inject StateContainerService StateContainerService *@

@if (Orders == null)
{
    <div class="table-responsive">
        <table class="table table-centered table-nowrap">
            <thead>
                <tr>

                    <th scope="col">Sr No</th>
                    <th scope="col">Billing Name</th>
                    <th scope="col">Date</th>
                    <th scope="col">Payment Status</th>
                    <th scope="col">Total</th>
                    <th scope="col">Payment Method</th>
                    <th scope="col">Order Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 1; i <= 10; i++)
                {
                    <tr>
                        <td><MudSkeleton /></td>
                        <td><MudSkeleton /></td>
                        <td><MudSkeleton /></td>
                        <td><MudSkeleton /></td>
                        <td><MudSkeleton /></td>
                        <td><MudSkeleton /></td>
                        <td><MudSkeleton /></td>
                        <td><MudSkeleton /></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else if (Orders.Any())
{

    <MudDataGrid T="OrderDTO" Items="Orders" Filterable="true" FilterMode="DataGridFilterMode.ColumnFilterRow" FilterCaseSensitivity="DataGridFilterCaseSensitivity.CaseInsensitive">
        <Columns>
            <PropertyColumn Property="x => x.OrderId" Title="Sr No" Filterable="false" />
            <PropertyColumn Property="x => x.BillingName" Title="Billing Name" />
            <PropertyColumn Property="x => x.Date" Format="MMM dd yyyy" />
            <PropertyColumn Property="x => x.PaymentStatus" Title="Payment Status" />
            <PropertyColumn Property="x => x.Total" />
            <PropertyColumn Property="x => x.PaymentMethod" Title="Payment Method" />
            <PropertyColumn Property="x => x.OrderStatus" Title="Order Status" />
            <TemplateColumn CellClass="d-flex justify-end" Filterable="false">
                <CellTemplate>
                    <MudStack Row>
                     <MudIconButton Icon="@Icons.Material.Filled.RemoveRedEye" aria-label="view" OnClick="()=>OnClick_BtnViewOrder(context.Item)" />
                     @* <MudIconButton Icon="@Icons.Material.Filled.Delete" aria-label="delete" OnClick="()=>OnClick_BtnViewOrder(context.Item)" /> *@
                     @* <MudIconButton Icon="@Icons.Material.Filled.ModeEdit" aria-label="delete" OnClick="()=>OnClick_BtnViewOrder(context.Item)" /> *@
                 </MudStack>
             </CellTemplate>
         </TemplateColumn>
     </Columns>
     <PagerContent>
         <MudDataGridPager T="OrderDTO" />
     </PagerContent>
 </MudDataGrid>
}