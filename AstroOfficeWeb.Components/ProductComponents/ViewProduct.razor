                <div class="row">
                    <div class="col-12 col-sm-6">
                        <h3 class="d-inline-block d-sm-none">@ViewProductDTO!.Name</h3>
                        <div class="col-12">
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-bs-ride="carousel">

                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="@SelectedImage!.ImageURL" class="d-block w-100" alt="@SelectedImage!.ImageName" title="@SelectedImage!.ImageName" />
                                    </div>

                                    @foreach (var image in BrowserFiles)
                                    {
                                        <div class="carousel-item">
                                            <img src="@image.ImageURL" class="d-block w-100" alt="@image.ImageName" title="@image.ImageName" />
                                        </div>
                                    }
                                </div>

                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>



                                <div class="carousel-indicators">

                                    <button data-bs-target="#carouselExampleIndicators" data-target="#carouselExampleIndicators" data-bs-slide-to="0" data-slide-to="0" class="thumbnail active" aria-current="true" aria-label="Slide 1">
                                        <img src="@SelectedImage!.ImageURL" class="img-thumbnail" alt="@SelectedImage!.ImageName" title="@SelectedImage!.ImageName" />
                                    </button>

                                    @foreach (var (value, index) in BrowserFiles.Select((value, index) => (value, index)))
                                    {
                                        <button data-bs-target="#carouselExampleIndicators" data-target="#carouselExampleIndicators" data-bs-slide-to="@(index+1)" data-slide-to="@(index+1)" class="thumbnail" aria-label="Slide @(index+2)">
                                            <img src="@value.ImageURL" class="img-thumbnail" alt="@value.ImageName" title="@value.ImageName" />
                                        </button>
                                    }
                                </div>


                            </div>




                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <h3 class="my-3">@ViewProductDTO!.Name</h3>
                        <h4 class="my-3">@ViewProductDTO!.Summary</h4>

                        <hr />

                        @if (!string.IsNullOrEmpty(ViewProductDTO.ProductCategory))
                        {
                            <h4>Category : @ViewProductDTO.ProductCategory</h4>
                        }

                        <div class="bg-white py-2 px-3 mt-4">
                            <h2 class="mb-0">
                                <i class="fas fa-rupee-sign"></i> @ViewProductDTO!.Price.ToString("N2")
                            </h2>
                            <h4 class="mt-0">
                                <small>Ex Tax: &#8377; @ViewProductDTO!.Price.ToString("N2") </small>
                            </h4>
                        </div>

                        <AuthorizeView Roles=@(ApplicationConst.Role_ProductManager + "," + ApplicationConst.Role_Admin) >
                            <Authorized>

                                <div class="mt-4">
                                    <button class="btn btn-primary btn-lg btn-flat" >
                                        <i class="fas fa-cart-plus fa-lg mr-2"></i>
                                        Add to Cart
                                    </button>

                                    <button class="btn btn-default btn-lg btn-flat">
                                        <i class="fas fa-heart fa-lg mr-2"></i>
                                        Add to Wishlist
                                    </button>
                                </div>



                            </Authorized>

                            <NotAuthorized>
                                <div class="mt-4">
                                    <button class="btn btn-primary btn-lg btn-flat" @onclick="OnClick_BtnAddToCart">
                                        <i class="fas fa-cart-plus fa-lg mr-2"></i>
                                        Add to Cart
                                    </button>

                                    <button class="btn btn-default btn-lg btn-flat" @onclick="OnClick_BtnAddToWishlist">
                                        <i class="fas fa-heart fa-lg mr-2"></i>
                                        Add to Wishlist
                                    </button>
                                </div>
                            </NotAuthorized>
                        </AuthorizeView>



