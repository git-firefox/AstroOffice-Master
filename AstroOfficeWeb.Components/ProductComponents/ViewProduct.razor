                    </div>
                </div>


                <div class="row mt-5">
                    <div class="col-12">
                        <div class="card card-primary card-outline card-outline-tabs">
                            <div class="card-header p-0 border-bottom-0">
                                <ul class="nav nav-tabs d-flex justify-content-center" id="custom-tabs-four-tab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="custom-tabs-four-home-tab" data-bs-toggle="pill" data-toggle="pill" href="#custom-tabs-four-home" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true">
                                            DESCRIPTION
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="custom-tabs-four-profile-tab" data-bs-toggle="pill" data-toggle="pill" href="#custom-tabs-four-profile" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="false">
                                            ADDITIONAL INFORMATION
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="card-body">
                                <div class="tab-content" id="custom-tabs-four-tabContent">
                                    <div class="tab-pane fade show active" id="custom-tabs-four-home" role="tabpanel" aria-labelledby="custom-tabs-four-home-tab">
                                        @* <div class="embed-responsive embed-responsive-16by9"> *@
                                        <div class="embed-responsive">
                                            @(new MarkupString(ViewProductDTO!.Description ?? ""))
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="custom-tabs-four-profile" role="tabpanel" aria-labelledby="custom-tabs-four-profile-tab">
                                        <MudTable Items="MetaDataList" Hover="true" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Info">
                                            <RowTemplate>
                                                <MudTd DataLabel="MetaKeyword">
                                                    @context.MetaKeyword
                                                </MudTd>
                                                <MudTd DataLabel="MetaValue">
                                                    @context.MetaValue
                                                </MudTd>
                                            </RowTemplate>

                                            <NoRecordsContent>
                                                <MudText>No extra details available. Feel free to contact us for specific inquiries.</MudText>
                                            </NoRecordsContent>
                                            <LoadingContent>
                                                <MudText>Loading...</MudText>
                                            </LoadingContent>
                                        </MudTable>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </section>
</div>