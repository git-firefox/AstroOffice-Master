@* @page "/manage-products/{Mode}/product"  *@
@* @page "/manage-products/{Mode}/product/{Sno:long}/{Name}" *@
@* @attribute [Authorize(Roles = "Admin,User,ManageProduct")] *@

@using AstroOfficeWeb.Services;
@using AstroOfficeWeb.Shared.DTOs;

@inject ProductService ProductService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject ISnackbar Snackbar
@inject IDialogService Dialog

<div class="row">
    <div class="col-lg-12 ">
        <BSNavs BSTabName="Save Product Info">
            <BSTabItems>
                <BSNavItem TabName="General Information" IsActive="true" TabNumber="1"></BSNavItem>
                <BSNavItem TabName="Product Images" TabNumber="2"></BSNavItem>
                <BSNavItem TabName="Metadata" TabNumber="3"></BSNavItem>
            </BSTabItems>
            <BSTabContent>
                <BSNavItemPane IsActive="true" TabPanelName="General Information">
                    <TabPaneBody>
                        <ProductGeneralInfo Model="GeneralInfo" />
                    </TabPaneBody>
                </BSNavItemPane>

                <BSNavItemPane TabPanelName="Product Images">
                    <TabPaneBody>
                        <ProductMediaInfo MediaFiles="new ()" />
                    </TabPaneBody>
                </BSNavItemPane>

                <BSNavItemPane TabPanelName="Metadata">
                    <TabPaneBody>
                        <ProductMetadataInfo />
                    </TabPaneBody>
                </BSNavItemPane>
            </BSTabContent>
        </BSNavs>
    </div>
</div>
