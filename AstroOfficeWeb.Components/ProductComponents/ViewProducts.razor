                            <MudSelectItem Value="@("Max-Low")" />
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="12" sm="3">
                        <MudSelect T="string" Label="Page size" @bind-Value="pageSize" Margin="Margin.Dense" Variant="Variant.Outlined" SelectedValuesChanged="(async (x)=> await ApplyFilter())" AnchorOrigin="Origin.BottomCenter" id="pageSizeShopdropdown">
                            <MudSelectItem Value="@("24")" />
                            <MudSelectItem Value="@("40")" />
                            <MudSelectItem Value="@("80")" />
                        </MudSelect>
                    </MudItem>
                    <MudItem sm="1" Class="d-flex justify-center align-content-center pl-0">
                        @* <MudButton OnClick="OnClick_BtnClear" Class="btn-custom" Style="margin-top:20px;">Clear</MudButton> *@
