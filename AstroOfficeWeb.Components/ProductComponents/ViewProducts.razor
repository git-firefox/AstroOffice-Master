<MudSwipeArea OnSwipeEnd="@OnSwipe">
    <MudDrawer @bind-Open="IsDrawerOpen" Width="375px" Height="100%" Anchor="Anchor.End" Elevation="1" Variant="DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudGrid>
                <MudItem xs="12">
                    <MudStack Justify="Justify.SpaceBetween" Row="true">
                        <MudText Typo="Typo.h6">
                            Filter Shopping
                        </MudText>
                        <MudIconButton Icon="@Icons.Material.Filled.Close" Color="Color.Primary" Size="Size.Small" OnClick="OnClick_BtnClose" />
                    </MudStack>
                </MudItem>
            </MudGrid>
        </MudDrawerHeader>
        <MudDrawerContainer>
            <MudGrid>
                <MudItem xs="12">
                    <MudPaper Elevation="0" Class="pa-4">
                        <MudItem Style="padding-top:0;padding-bottom:25px;">
                            <MudSelect T="string" Class="text-white" Label="Sort by price" @bind-Value="sortByPrice" SelectedValuesChanged="(async (x)=> await ApplyFilter())" AnchorOrigin="Origin.BottomCenter" id="sortShopdropdown">
                                <MudSelectItem Value="@("Default")" />
                                <MudSelectItem Value="@("Low-Max")" />
                                <MudSelectItem Value="@("Max-Low")" />
                            </MudSelect>
                        </MudItem>

                        <MudItem Style="padding-top:0;padding-bottom:25px">
                            <MudSelect T="string" Label="Page size" @bind-Value="pageSize" SelectedValuesChanged="(async (x)=> await ApplyFilter())" AnchorOrigin="Origin.BottomCenter" id="pageSizeShopdropdown">
                                <MudSelectItem Value="@("24")" />
                                <MudSelectItem Value="@("40")" />
                                <MudSelectItem Value="@("80")" />
                            </MudSelect>
                        </MudItem>
                        <MudItem Style="padding-top:0;padding-bottom:25px">
                            <MudText> Shop By Category</MudText>
                            <MudNavMenu>

                                @if (CategoryDTOs == null)
                                {
                                    for (int i = 0; i < 10; i++)
                                    {
                                        <MudSkeleton Width="100%" Height="42px;" />
                                    }
                                }
                                else if (CategoryDTOs.Any())
                                {
                                    foreach (var category in CategoryDTOs)
                                    {
                                        if (category.SubCategories != null && category.SubCategories.Any())
                                        {
                                            <MudNavGroup Title="@category.Title">
                                                @foreach (var subcategory in category.SubCategories)
                                                {
                                                    <MudNavLink OnClick="(()=> OnClick_CategoryList(subcategory))">@subcategory.Title</MudNavLink>
                                                }
                                            </MudNavGroup>
                                        }
                                        else
                                        {
                                            <MudNavLink OnClick="(()=> OnClick_CategoryList(category))">@category.Title</MudNavLink>
                                        }
                                    }
                                }

                            </MudNavMenu>
                        </MudItem>
                    </MudPaper>
                    <div class="d-flex justify-content-between">
                        <MudPaper Class="pa-4" Elevation="0">
                            <MudButton ButtonType=ButtonType.Button Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="OnClick_BtnClose">Close</MudButton>
                        </MudPaper>

                        <MudItem Class="pa-4 ">
                            <MudButton OnClick="OnClick_BtnClear" ButtonType=ButtonType.Button Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Clear Filter</MudButton>
                        </MudItem>
                    </div>
                </MudItem>
            </MudGrid>
        </MudDrawerContainer>
    </MudDrawer>
</MudSwipeArea>



<div class="search-btn-group">
    <MudPaper Class="rounded-lg p-2">
        <div class="row">
            <div class="col">
                <MudTextField T="string" DebounceInterval="500" InputType="InputType.Search" TextChanged="FilterFunc" Placeholder="Search Product" Variant="Variant.Outlined" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Search" Margin="Margin.Dense" />
            </div>
            <div class="col-2 d-flex justify-content-end">
                <MudIconButton OnClick="OnClick_BtnFilter" Icon="@Icons.Material.Filled.FilterAlt" Class="d-flex d-md-none m-auto rounded-circle" Variant="Variant.Filled" Size="Size.Medium" Color="Color.Primary"></MudIconButton>
            </div>
        </div>
    </MudPaper>
</div>
<div class="row mb-2">
    <div class="col">
        <div class="shop-search">
